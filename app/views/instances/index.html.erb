<% title(t('instances.title')) %>
<% description("Track your character's collectables by instance.") %>

<%# <%= render 'shared/filters' %1> %>
<div class="d-flex justify-content-center">
  <div class="d-inline-flex flex-column">
    <%= render 'category_buttons', categories: @categories, selected: @category %>
    <%= javascript_tag "window._token = '#{form_authenticity_token}'" %>
    <table class="table table-striped table-sm shadow sortable collection categorized compact">
      <thead>
        <tr>
          <th scope="col"><%= t('name') %></th>
          <th scope="col" data-defaultsort="disabled"><%= t('mounts.title') %></th>
          <th scope="col" data-defaultsort="disabled"><%= t('minions.title') %></th>
          <th scope="col" data-defaultsort="disabled"><%= t('orchestrions.title') %></th>
        </tr>
      </thead>
      <tbody>
        <% @instances.each do |instance| %>
          <tr class="collectable category-row category-<%= @categories[instance.content_type] %>">
            <td class="name" data-value="<%= instance.order %>">
              <%= database_link(:instance, instance.name, instance.id) %>
            </td>
            <% %w(Mount Minion).each do |type| %>
              <td>
                <% instance.sources.select { |source| source.collectable_type == type }.each do |source| %>
                  <%= source_collectable_reward(source) %>
                <% end %>
              </td>
            <% end %>
            <td>
              <% @instance_orchestrions[instance.id].each do |orchestrion| %>
                <%= instance_orchestrion_reward(orchestrion) %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
